{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-no-undef": [2, { "allowGlobals": true }],
        "no-unused-vars" : "warn",
        "semi": [ "error", "never" ],
        "quotes": [ "error", "single" ]
    },
    "globals": {
        "React": "writable"
    }
}
